@model DepartmentRole
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row">
			<h2 class="text-primary">Create Department Manager</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name">Department Manager</label>
			<input asp-for="Name"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
	<a asp-controller="DepartmentRole" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
</form>